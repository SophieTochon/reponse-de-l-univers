<h1>Users#edit</h1>

    <%= form_for @user, url: {action: "update"}, html: {class: "nifty-form"} do |f| %>

      <%= f.label "Email" %>
      <%= f.email_field :email %>

      <%= f.label "Password" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>      

      <%= f.submit "Updater mon profil", class: "btn btn-lg btn-primary" %>
    <% end %>
