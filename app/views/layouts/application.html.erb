<!DOCTYPE html>
<html>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Mayson", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Index", users_index_path %></li>
          <li><%= link_to "Mon profil", user_path(current_user) %></li>
          <li><%= link_to "Deconnexion", logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Se connecter", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

